<div class="col-md-4 col-md-offset-4">
<h1>Edit your activites</h1>

<%= form_for @activity do |f| %>
  <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
  </div>
  <div>
      <%= f.label :description %>
      <%= f.text_field :description %>
  </div>
  <div>
      <%= f.label :when %>
      <%= f.select :when, options_for_select([["Select One", ""], "past", "present", "future"]) %>
  <div>
      <%= f.submit 'save' %>
  </div>
<% end %>
