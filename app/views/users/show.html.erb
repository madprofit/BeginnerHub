
<div class="user col-md-4 col-md-offset-4">
<ul>
    <li>
    <%= @user.name %> <br>
    <%= @user.email %> <br>
    <%= @user.status %> <br>
    <%= image_tag @user.avatar.url(:medium) %>
    </li>
</ul>
</div>

<div class="row">
    <h3 class="col-md-4 col-md-offset-4">Activities</h3>
    <% @user.activities.each do |activity| %>
        <table class="table table-striped col-md-4">
        <thread>
        <tr>
            <th class="intro col-md-4 col-md-offset-4">
            <p><%= link_to activity.title, activity_path(activity.id) %></p></th>
        </tr>
        </thread>
        </table>
            <div class="col-md-4 col-md-offset-4">
            <%= link_to 'Delete', activity_path(activity.id), method: :delete, data: { confirm: 'Are you sure?' } %> -
            <%= link_to 'Edit', edit_activity_path(activity.id) %>
        </div>


<% end %>
<div class="intro col-md-4 col-md-offset-4 add_activities">
    <%= link_to 'Add Activity', new_activity_path %>
</div>


