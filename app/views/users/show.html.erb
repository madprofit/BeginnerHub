<p>GA Hub profile</p>
<ul>
    <li>
    <%= @user.name %> <br>
    <%= @user.email %> <br>
    <%= @user.status %> <br>
    <%= image_tag @user.avatar.url(:medium) %>
    </li>
</ul>

<% @user.activities.each do |activity| %>
  <%= activity.title %>
      <%= link_to 'Delete', activity_path(activity.id), method: :delete, data: { confirm: 'Are you sure?' } %>

<% end %>

<%= link_to 'add activities', new_activity_path %>

<form action="/logout" method="post">
    <input name="_method" value="DELETE" type="hidden">
    <button>Logout</button>
