
<div class="user col-md-4 col-md-offset-4">
    <%= image_tag @user.avatar.url(:medium) %>
    <%= @user.name %> <br>
    <%= @user.email %> <br>
    <%= @user.status %> <br>
</div>

<h4 class="intro submit col-md-4 col-md-offset-4">Activities</h4>



    <% @user.activities.each do |activity| %>
    <div class="row">
        <table class=" activity table table-inverse">
        <thead>
            <th><%= link_to activity.title, activity_path(activity.id) %></th>
        </thead>
        <tbody >
            <td class="block"><%= link_to 'Delete', activity_path(activity.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td class="block"><%= link_to 'Edit', edit_activity_path(activity.id) %></td>
        </tbody>
        </table>
    </div>
    <% end %>


